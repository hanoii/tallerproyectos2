<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5sp"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/client_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6"
            >
            <TextView
                android:id="@+id/order_history_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Material"
                />
            <TextView
                android:id="@+id/order_history_client_enterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Material" />
            <TextView
                android:id="@+id/order_history_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Material" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_history_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                style="@android:style/TextAppearance.Material" />
            <TextView
                android:id="@+id/order_history_total"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Material.Large" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>