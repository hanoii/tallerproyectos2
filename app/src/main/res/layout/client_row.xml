<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/client_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <TextView
        android:id="@+id/client_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Material.Large"
        android:focusableInTouchMode="false"
        android:focusable="false"
        />
    <TextView
        android:id="@+id/client_enterprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/client_name"
        style="@android:style/TextAppearance.Material"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:text="Dirección:"/>
    <TextView
        android:id="@+id/client_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/client_enterprise"
        style="@android:style/TextAppearance.Material"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:text="Dirección:"/>
    <ImageView
        android:id="@+id/call_icon"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</RelativeLayout>