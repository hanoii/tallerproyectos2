<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="sebastian.orderTracker.activities.OrderHistory">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_order_history_appbar"
        android:theme="@style/AppTheme.AppBarOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.Toolbar
                android:id="@+id/order_history_toolbar_title"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:layout_weight="0.6"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Por DÃ­a"
                android:id="@+id/order_history_spinner_title"
                android:gravity="center"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Material.Large"
                android:layout_weight="0.25"/>
            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:id="@+id/order_history_day_month_switch"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/order_history_day_spinner"
                android:layout_width="fill_parent"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Spinner"/>
            <Spinner
                android:id="@+id/order_history_months_spinner"
                android:layout_weight="0.7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Spinner"/>
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_history_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scrollbars="vertical"
        android:layout_below="@id/activity_order_history_appbar"
        />
</RelativeLayout>
